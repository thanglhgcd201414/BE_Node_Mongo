{
  "name": "express-typescript-boilerplate",
  "version": "1.0.14",
  "description": "An Express boilerplate backend",
  "author": "Edwin Hernandez",
  "repository": "edwinhern/express-typescript-2024",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "build": "tsup",
    "start:dev": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "start:prod": "node dist/index.js",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format --write",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "check": "pnpm lint && pnpm format && pnpm build && pnpm test",
    "seed": "ts-node -r tsconfig-paths/register ./src/db/seeders/seed.ts"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.13",
    "dotenv": "16.4.7",
    "envalid": "8.0.0",
    "express": "4.21.2",
    "express-rate-limit": "7.5.0",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.1",
    "multer": "1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-google-oauth2": "^0.2.0",
    "pino": "9.6.0",
    "pino-http": "10.4.0",
    "qs": "^6.14.0",
    "swagger-ui-express": "5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@faker-js/faker": "^9.6.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth2": "^0.1.10",
    "@types/qs": "^6.9.18",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.0.9",
    "faker": "^6.6.6",
    "faker-js": "^1.0.0",
    "pino-pretty": "13.0.0",
    "supertest": "7.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "8.4.0",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.9"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "packageManager": "pnpm@10.6.5"
}
